<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            minHeight="280.0" minWidth="280.0"
            prefHeight="500.0" prefWidth="380.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="wacka.MainWindow">
    <children>
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   prefHeight="36.0"
                   AnchorPane.bottomAnchor="8.0"
                   AnchorPane.leftAnchor="8.0"
                   AnchorPane.rightAnchor="80.0" />
        <Button fx:id="sendButton"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="36.0"
                prefWidth="72.0"
                text="Send"
                AnchorPane.bottomAnchor="8.0"
                AnchorPane.rightAnchor="8.0" />
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vvalue="1.0"
                    AnchorPane.bottomAnchor="52.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">
            <content>
                <VBox fx:id="dialogContainer"
                      fillWidth="true" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
